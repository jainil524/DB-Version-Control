{
  "name": "db-version-control",
  "version": "1.0.0",
  "description": "This is the  GUI for the DB-Version-Control application which we are making",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "Version-control"
  ],
  "author": "Jainil Prajapati, Ansh Bhimani",
  "license": "ISC",
  "build": {
    "appId": "com.yourcompany.dbversioncontrol",
    "productName": "DB Version Control",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "node_modules"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "requestedExecutionLevel": "requireAdministrator"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "marked": "^13.0.2",
    "node-run-cmd": "^1.0.1",
    "sudo-prompt": "^9.2.1"
  }
}
